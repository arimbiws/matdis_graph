#include <stdio.h>
#define V 4
#define INF 99999


void cetakHasil(int jarak[][V]) {
    printf("Matriks berikut menunjukkan jarak terpendek antara setiap pasangan simpul \n");
    for (int i = 0; i < V; i++) {
        for (int j = 0; j < V; j++) {
            if (jarak[i][j] == INF)
                printf("%7s", "INF");
            else
                printf("%7d", jarak[i][j]);
        }
        printf("\n");
    }
}

void floydWarshall(int graph[][V]) {
    int jarak[V][V], i, j, k;

    for (i = 0; i < V; i++)
        for (j = 0; j < V; j++)
            jarak[i][j] = graph[i][j];

    for (k = 0; k < V; k++) {
        for (i = 0; i < V; i++) {
            for (j = 0; j < V; j++) {
                if (jarak[i][k] + jarak[k][j] < jarak[i][j])
                    jarak[i][j] = jarak[i][k] + jarak[k][j];
            }
        }
    }

    cetakHasil(jarak);
}

int main() {
    int graph[V][V] = {
        {0, 5, INF, 10},
        {INF, 0, 3, INF},
        {INF, INF, 0, 1},
        {INF, INF, INF, 0}
    };

    floydWarshall(graph);
    return 0;
}
